<svg:svg xmlns:svg='http://www.w3.org/2000/svg'
	xmlns:xlink='http://www.w3.org/1999/xlink'
	xmlns='http://www.kite9.org/schema/adl'>


	<back id="actor">
		<svg:ellipse cx="#{$width div 2}" cy="5" rx="5" ry ="5" />
		<path xmlns="http://www.w3.org/2000/svg"
			d="M 5 10 
			H #{$width -5} 
			v 7 
			h -5 
			L #{$width - 5} #{$height} 
			h -7 
			L #{$width div 2} 22 
			L 13 #{$height}
			h -7
			L 10 17
			h -5
			z" />
	</back>

	<back id="component">
		<svg:path d="
			M 5 0
			H #{$width}
			V #{$height}
			H 5 
			V 20
			H 10
			V 15
			H 5
			V 10
			H 10
			V 5
			H 5
			V 0
			z" />
		<svg:rect x="0" y="5" width="10" height="5" />
		<svg:rect x="0" y="15" width="10" height="5" />
	</back>

	<back id="note">
		<svg:path d="
			M 0 0
			H #{$width - 10}
			L #{$width} 10
			V #{$height}
			H 0
			V 0" />
		<svg:path d="
			M #{$width - 10} 0
			v 10
			h 10" />
	</back>

	<back id="interface">
		<svg:ellipse cx="#{$width div 2}" cy="#{$height div 2}" rx="#{$width div 2}" ry ="#{$height div 2}" />
	</back>

	<back id="use-case">
		<svg:ellipse cx="#{$width div 2}" cy="#{$height div 2}" rx="#{$width div 2}" ry ="#{$height div 2}" />
	</back>

	<back id="package">
		<svg:path
			d="
			M 0 0
			L #{$width div 2 - 10} 0
			C #{$width div 2} 0 #{$width div 2 + 10} 10 #{$width div 2 + 20} 10 
			H #{$width} 
			V #{$height}
			H 0
			Z
		" />
	</back>

	<back id="uml-container">
		<svg:rect x="0" y="5" width="#{$width - 5}" height="#{$height - 5}" />
		<svg:path d="
			M 0, 5 
			l 5 -5
			H #{$width}
			V #{$height - 5}
			l -5 5
			V 5
			H 0
			z" />
		<svg:path d="
			M #{$width -5} 5
			l 5 -5" />
	</back>
	
	<back id="divider">
		<svg:path d="
			M 0 #{$height div 2}
			H #{$width}" />
	</back>
	
	<div id="methods"
		k9-ui="delete child"
		k9-child="method">
	
		<divider />

		<contents optional="true" />	
	</div>

	<div id="properties" 
		k9-ui="delete child"
		k9-child="property">
	
		<divider />

		<contents optional="true" />		
	</div>

</svg:svg>