	<xsl:import href="/public/templates/common/back/back-template.xsl"/>

	<!-- simple text area, can only be edited, not moved, deleted etc. -->
	<xsl:template name="textarea">
		<g>
			<xsl:attribute name="k9-ui">orphan edit</xsl:attribute>
			<xsl:attribute name="k9-shape"><xsl:value-of select="local-name()" /></xsl:attribute>
			<xsl:attribute name="k9-format">textarea</xsl:attribute>

			<xsl:call-template name="back-round-rect" />

			<xsl:apply-templates />
		</g>
	</xsl:template>


