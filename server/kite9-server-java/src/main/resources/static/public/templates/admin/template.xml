<svg:svg xmlns:svg='http://www.w3.org/2000/svg'
	xmlns:xlink='http://www.w3.org/1999/xlink'
	xmlns='http://www.kite9.org/schema/adl'
	xmlns:adl='http://www.kite9.org/schema/adl'>

	<svg:defs>
		<svg:clipPath id="iconCircle-100pt">
			<svg:circle r="50pt" cx="50pt" cy="50pt" />
		</svg:clipPath>
	</svg:defs>

	<!-- this handles embedded entities -->
	<template id="entity" k9-texture="none">
		<back />
		<contents optional="true" />
	</template>

	<!-- Basically a copy of common-image-template except for clip-path -->
	<template id="icon">
		<placeholder style='kite9-type: svg; '>
			<svg:rect x='0' y='0' width='pre:#{$template-1}' height='pre:#{$template-2}' fill="none" stroke="white" stroke-opacity=".01" />
		</placeholder>
		<decal style="kite9-type: svg; kite9-usage: decal;">
			<svg:image x="0" y="0" width="#{$width}"
				height="#{$height}" xlink:href="pre:#{text()}" />
		</decal>
	</template>
</svg:svg>