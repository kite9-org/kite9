{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"allowJs": true,
		"outDir": "target/classes/static/public",
		"rootDir": "",
		"target": "es2021",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
		      "es2019","DOM"
		],
		"moduleResolution": "node"
	},
	"include": [
		"src/main/resources/static/public/**/*"
	]
}